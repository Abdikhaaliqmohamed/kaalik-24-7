@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        background-image: url('/images/gym-hero.jpg');
        background-size: cover;
        background-position: center;
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: white;
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: bold;
    }

    .hero-section h2 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .hero-btn {
        padding: 12px 28px;
        font-size: 1.2rem;
        border: 2px solid white;
        background: transparent;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .hero-btn:hover {
        background-color: white;
        color: black;
    }
</style>

<div class="hero-section">
    <h2></h2>
    <h1></h1>
    <h2></h2>
 
</div>
